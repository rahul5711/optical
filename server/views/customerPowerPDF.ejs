</head>

<body>
 
      <%- include('./header.ejs', {pageNumber: 1}) %>
         <!-- <%=data.customer.Name%> -->
 

   <section>
         <div>
            <div <% %>  style="border-bottom: 1px solid  <%= data.Color %>; width: 38%; position:absolute; margin-top: 1%;"> </div>
            <div <% %>  style="border-bottom: 1px solid  <%= data.Color %>; width: 38%; float: right; position: relative; margin-top: 1%;"></div>
            <span class="headingName" <% %> style="color: <%= data.Color %>;"> Eye-Sight Prescription </span>
         </div>
   </section>

   <!-- customer details -->
   <section class="customer_details">
      <div class="row1">
         <div class="col-1">
            <p class="cus_p">Name </p>
            <p class="cus_p">Moblie </p>
            <p class="cus_p">Address </p>
         </div>
         <div class="col-2">
            <p class="cus_p"> : <%=data.customer.Name%> </p>
            <p class="cus_p"> : <%=data.customer.MobileNo1%> </p>
            <p class="cus_p"> : <%=data.customer.Address%></p>
     
         </div>
      </div>
      <div class="row2">
         <div class="col-1">
            <p class="cus_p">VistingDate</p>
            <p class="cus_p">Age </p>
            <p class="cus_p">Rx_By </p>
         </div>
         <div class="col-2">
 
            <% if (data.mode === 'spectacle') { %>
             <p class="cus_p"> : <%=data.spectacle.VisitDate%> </p>
            <%} %>
            <% if (data.mode === 'contact') { %>
            <p class="cus_p"> : <%=data.contact.VisitDate%></p>
            <%} %>
            <% if (data.mode === 'other') { %>
            <p class="cus_p"> : <%=data.other.VisitDate%></p>
            <%} %>

            <p class="cus_p"> : <%=data.customer.Age%> </p>

            <% if (data.mode === 'spectacle' && data.spectacle.RefferedByDoc != 'Self') { %>
            <p class="cus_p"> : <%=data.spectacle.RefferedByDoc%></p>
            <%} %>
            <% if (data.mode === 'contact') { %>
            <p class="cus_p"> : <%=data.contact.RefferedByDoc%></p>
            <%} %>
            <% if (data.mode === 'other') { %>
            <p class="cus_p"> : <%=data.other.RefferedByDoc%></p>
            <%} %>
         </div>
      </div>
   </section>
   <!-- <h6 class="titleName"> <%=data.rx%></h6> -->

   <section class="titleName">
      <% if (data.mode === 'spectacle') { %>
      <h6 <% %> style="color: <%= data.Color %>;"> Spectacle RX</h6>
      <%} %>
      <% if (data.mode === 'contact') { %>
      <h6 <% %> style="color: <%= data.Color %>;"> Contact RX</h6>
      <%} %>

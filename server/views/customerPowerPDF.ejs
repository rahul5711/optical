      <% if (data.otherSpec === true) { %>
         <h6 <% %> style="color: <%= data.Color %>;"> Spectacle RX</h6>
         <%} %>
         <% if (data.otherContant === true) { %>
         <h6 <% %> style="color: <%= data.Color %>;"> Contact RX</h6>
         <%} %>
         <% if (data.otherNoPower === true) { %>
         <h6 <% %> style="color: <%= data.Color %>;"> Other RX</h6>
         <%} %>
      <!-- other title name  -->
   </section>
    <!-- power spec -->

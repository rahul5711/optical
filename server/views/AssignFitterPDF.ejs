<html>
<link rel="stylesheet" href="http://localhost:3000/assest/FitterOrder.css">

<style>
    html body {
        zoom: 100%;
    }

    .headingName {
         position: absolute;
         margin-left: 39.2%;
         width: 30%;
         color: red;
         margin-top: 0px;
         font-size: 14px !important;
      }
</style>
<body>
    <section>
        <%- include('./header.ejs', {pageNumber: 1}) %>
        <div style="height: 30px;">
            <div style="border-bottom: 1px solid; width: 38%; position:absolute; margin-top: 1%;"> </div>
            <div style="border-bottom: 1px solid; width: 38%; float: right; position: relative; margin-top: 1%;"></div>
            <span class="headingName">FITTER ORDER</span>
         </div>
    </section>
    <% if(data.productList.length !==0 ){ data.productList.forEach(function (i, index) { %>
        <fieldset style=" margin-bottom: 5%;">
            <legend> Fitting Details </legend>
    <section style="width: 100%; height: 250px;">
            <table style="width: 30%; float: left; border: none; margin-bottom: 2%;">
               <tr>
                 <th style="border: none;text-align: left;">Name</th>
                 <td style="border: none;">: <%=i.CustomerName%></td>
               </tr>
               <!-- <tr>
                 <th style="border: none;text-align: left;"> Mobile No.</th>
                 <td style="border: none;">: <%=i.MobileNo1%></td>
               </tr> -->
               <tr>
                 <th style="border: none;text-align: left;"> Invoice Date</th>
                 <td style="border: none;">: <%=i.InvoiceDate%></td>
               </tr>
               <tr>
                 <th style="border: none;text-align: left;"> Delivery Date</th>
                 <td style="border: none;">: <%=i.DeliveryDate%></td>
               </tr>
          
            </table>
            <table style="width: 68%; float: right; margin-bottom: 2%;">
                <thead>
                    <tr style="white-space: nowrap;">
                        <th style="border: none;"></th>
                        <th style="border: none;"></th>
                        <th style="border: none;"></th>
                        <th style="border: none;" colspan="2">Right Eye</th>
                        <th style="border-left: none;"></th>
                        <th style="border: none;"></th>
                        <th style="border: none;"></th>
                        <th style="border: none;">Left Eye</th>
                        <th style="border: none;"></th>
                        <th style="border-left: none;"></th>
                    </tr>
                    <tr>
                        <th></th>
                        <th>SPH</th>
                        <th>CYL</th>
                        <th>AXIS</th>
                        <th>VA</th>
                        <th>ADD</th>
                        <th>SPH</th>
                        <th>CYL</th>
                        <th>AXIS</th>
                        <th>VA</th>
                        <th>ADD</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(const Measurement of JSON.parse(i.MeasurementID)){ %>
                    <tr style="text-align: center;" >
                        <td>D/V</td>
                        <td> <%=Measurement.REDPSPH%></td>
                        <td> <%=Measurement.REDPCYL%></td>
                        <td> <%=Measurement.REDPAxis%></td>
                        <td> <%=Measurement.REDPVA%></td>
                        <td> <%=Measurement.R_Addition%></td>
                        <td> <%=Measurement.LEDPSPH%> </td>
                        <td> <%=Measurement.LEDPCYL%></td>
                        <td> <%=Measurement.LEDPAxis%></td>
                        <td> <%=Measurement.LEDPVA%></td>
                        <td> <%=Measurement.L_Addition%> </td>
                    </tr>
                    <tr style="text-align: center;">
                        <td>N/V</td>
                        <td><%=Measurement.RENPSPH%></td>
                        <td><%=Measurement.RENPCYL%></td>
                        <td><%=Measurement.RENPAxis%></td>
                        <td><%=Measurement.RENPVA%></td>
                        <td></td>
                        <td><%=Measurement.LENPSPH%></td>
                        <td><%=Measurement.LENPCYL%></td>
                        <td><%=Measurement.LENPAxis%></td>
                        <td><%=Measurement.LENPVA%></td>
                        <td></td>
                    </tr>
                 
                </tbody>
                <tfoot style="white-space: nowrap;">
                    <tr> 
                        <th colspan="3">Refractive Index</th>
                        <th colspan="2"> <%=Measurement.RefractiveIndex%></th>
                        <th>PD Right</th>
                        <th colspan="2"> <%=Measurement.REPD%></th>
                        <th>Prism Right</th>
                        <th colspan="2"> <%=Measurement.R_Prism%></th>
                    </tr>
                    <tr>
                        <th colspan="3">Vertex Distance</th>
                        <th colspan="2"> <%=Measurement.VertexDistance%></th>
                        <th>PD Left</th>
                        <th colspan="2"><%=Measurement.LEPD%></th>
                        <th>Prism left</th>
                        <th colspan="2"><%=Measurement.L_Prism%></th>
                    </tr>
                    <tr>
                        <th colspan="3">Fitting Height</th>
                        <th colspan="10"><%=Measurement.FittingHeight%></th>
                        
                    </tr>
                </tfoot>
                <% } %>
            </table>
            <table style="width: 100%; ">
                <thead>
                    <tr style="text-align: left;">
                        <th> Product Description  </th>
                        <th> Remarks </th>
                      </tr>
                </thead>
              <tbody>
                <tr>
                    <td><%=i.s%> </td>
                    <td><%=i.R%> </td>
                  </tr>
              </tbody>
             
            </table>
  
    </section>
</fieldset>
    <%})}%>
</body>

</html>
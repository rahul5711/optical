<html>
<link rel="stylesheet" href="http://localhost:3000/assest/purchaseDetails.css">

<style>
    html body {
        zoom: 100%;
    }
</style>
<body>
    <section>
        <h2>Purchase Order </h2>
        <div class="main">
            <div class="row1">
                <div class="col-1">
                   <img src="<%=data.LogoURL%>" alt="" class="logo">
                </div>
            </div>
            <div class="row2">
                <div class="col-1">
                    <p>Supplier Name</p>
                    <p>Shop Name </p>
                    <p>PurchaseDate </p>
                </div>
                <div class="col-2">
                    <p> : <%=data.productListHVD[0].SupplierName%>
                    </p>
                    <p> : <%=data.shopdetails.Name%> (<%=data.shopdetails.AreaName%>)
                    </p>
                    <p> : <%=data.todaydate%>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section>
        <table>
            <thead>
                <tr>
                    <th>SNo.</th>
                    <th>InvoiceDate</th>
                    <th>InvoiceNo</th>
                    <th>ProductName</th>
                    <th>Qty</th>
                    <th>UnitPrice </th>
                    <th>SubTotal </th>
                    <th>GST%</th>
                    <th>GSTAmount</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.productListHVD.length !==0 ){ data.productListHVD.forEach(function (i, index) { %>
                    <tr>
                        <td>
                            <%= index+1 %>
                        </td>
                        <td>
                            <%=i.InvoiceDate%>
                        </td>
                        <td>
                            <%=i.InvoiceNo%>
                        </td>
                        <td>
                            <%=i.ProductName%>
                        </td>
                        <td>
                            <%=i.Quantity%>
                        </td>
                        <td>
                            <%=i.UnitPrice%>
                        </td>
                        <td>
                            <%=(i.Quantity * i.UnitPrice)%>
                        </td>
                        <td>
                            <%=i.GSTPercentage%>
                        </td>
                        <td>
                            <%= ( i.GSTAmount)%>
                        </td>
                        <td>
                            <%=(i.TotalAmount)%>
                        </td>
                    </tr>
                    <%})}%>
            </tbody>
         
        </table>
        </div>
    </section>
</body>

</html>
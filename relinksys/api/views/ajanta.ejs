</style>

<body>
    <section style="width: 100%; height: auto;">
        <table style="width: 100%; text-align: center !important; ">
            <span style="position: absolute; top: 0%; right: 0;">
                <% if (data.mode === "Receipt") { %>
                            <%= data.shopdetails.GSTNo %>
            <% } %>
            </span>

            <tr>
                <td ><img src="<%= data.LogoURL %>" alt="" <% %> style="width: <%= data.ImageWidth %>; height: <%= data.ImageHeight %>;"></td>
            </tr>
      
            <tr>
                <td <% %> style="line-height: <%= data.LineSpace %>; font-size: <%= data.ShopDetailFont %>;">
                    <img src='http://localhost:3000/assest/o-add.png' alt="LOGO" width="3%">  <%= data.shopdetails.Address %>
                </td>
            </tr>
            <tr>
                <td <% %> style="line-height: <%= data.LineSpace %>; font-size: <%= data.ShopDetailFont %>;"><img src='http://localhost:3000/assest/o-email.png' alt="LOGO" width="2%">
                <%= data.shopdetails.Email %></td>
            </tr>
            <tr>
                <td <% %> style="line-height: <%= data.LineSpace %>; font-size: <%= data.ShopDetailFont %>;"><img src='http://localhost:3000/assest/o-call.png' alt="LOGO" width="2%">
                <%= data.shopdetails.MobileNo1 %></td>
            </tr>
        </table>
    </section>
  
    <section>
            <div style="height: 20px; vertical-align:  middle !important;">
                <div <% %>  style="border-bottom: 1px solid <%= data.Color %>; width: 40%; position:absolute; margin-top: 1%;"> </div>
                <div <% %> style="border-bottom: 1px solid <%= data.Color %>; width: 40%; float: right; position: relative; margin-top: 1%;"></div>
                <span <% %> class="headingName" style="color: <%= data.Color %>;" ><%=data.bill%></span>
            </div>
    </section>

    <section style="width: 100%; height: auto; font-size: 16px;">
        <table style="width: 100%;">
    <tr>
        <td style="width: 50%; vertical-align: top !important; white-space: nowrap;">
            <table  <% %> style="width: 100%;font-size:<%= data.CustomerFont %> ; ">
                <tr><td style="width: 25%;">Invoice No.</td><td><%=data.billMaster.InvoiceNo%></td></tr>
                <tr><td style="width: 25%;">Name</td><td><%=data.customer.Title%> <%=data.customer.Name%></td></tr>
                <tr><td style="width: 25%;">Mobile No.</td><td><%=data.customer.MobileNo1%></td></tr>
            </table>
        </td>
        <td style="width: 30%; vertical-align: top !important; ">
            <table <% %> style="width: 100%;font-size:<%= data.CustomerFont %> ; ">
                <tr><td style="width: 40%;">Bill Date</td><td><%=data.billMaster.BillDate%></td></tr>
                <tr><td style="width: 40%;">Del Date</td><td><%=data.billMaster.DeliveryDate%></td></tr>
                <tr><td style="width: 40%; vertical-align: top !important; ">Sale Person</td><td style="vertical-align: top !important;"><%=data.employee%> </td></tr>
            </table>
        </td>
    </tr>
</table>

        <div style="clear: both; height: 5px;"></div>
    </section>
    <hr style="height: auto;">
 <% if (data.ShowPower === true){%>
    <section style="height: auto;  ">
        <% if(data.EyeMeasurement !==null && data.EyeMeasurement.length !==0){ data.EyeMeasurement.forEach(function (i,
            index) { %>
            <table class="powerTbl" style="width: 100%; text-align: center !important; position: relative !important; margin-top: 3%;">
                <tr style="background-color: #000; color: #fff; ">
                    <th style="background-color: #000; color: #fff; width:15%; ">
                    <b style="position: absolute; top:-21%; left: 0%;  z-index: 1;margin-left: -4px !important;"> <img src="http://localhost:3000/assest/o-rx1.jpeg" alt="" width="100%" ></b>     
                    </th>
                    <th style="text-align: center !important;">Sph</th>
                    <th style="text-align: center !important;">Cyl </th>
                    <th style="text-align: center !important;">Axis </th>
                    <th style="text-align: center !important;">VP </th>
                    <th style="text-align: center !important;">Add</th>
                </tr>
                <tr class="fontFmaliy">
                    <th  style="background-color: #000; color: #fff;text-align: left;font-family: Helvetica;">RIGHT </th>
                    <td>
                        <%= (parseFloat(i.REDPSPH) == 0.00 ? 'PLANO' : i.REDPSPH) %>
                    </td>
                    <td>
                        <%= (parseFloat(i.REDPCYL) == 0.00 ? 'PLANO' : i.REDPCYL) %>
                    </td>
                    <td>
                        <%=i.REDPAxis%>
                    </td>
                    <td>
                        <%=i.REDPVA%>
                    </td>
                    <td>
                        <%=i.R_Addition%>
                    </td>
                </tr>
                <tr class="fontFmaliy">
                    <th style="background-color: #000; color: #fff; text-align: left; font-family: Helvetica;">LEFT </th>
                    <td>
                          <%= (parseFloat(i.LEDPSPH) == 0.00 ? 'PLANO' : i.LEDPSPH) %>
                    </td>
                    <td>
                     <%= (parseFloat(i.LEDPCYL) == 0.00 ? 'PLANO' : i.LEDPCYL) %>
                    </td>
                    <td>
                        <%=i.LEDPAxis%>
                    </td>
                    <td>
                        <%=i.LEDPVA%>
                    </td>
                    <td>
                        <%=i.L_Addition%>
                    </td>
                </tr>
            </table>
            <%})}%>
    </section>
 <%}%> 
    <section>
    <table class="powerTbl1" style="width: 100%; text-align: center !important; margin-top: 3%; ">
        <thead>
            <tr style="background-color: #000; color: #fff;">
                <th style="text-align: left;">Item</th>
                <th style="text-align: right;">Rate</th>
                <th style="text-align: right;">Qty</th>
                <th style="text-align: right;">Disc.</th>
                <% if (data.shopdetails.SubTotal==="true" ){%>
                <th>Sub.</th>
                 <%}%>
 <% if (data.shopdetails.Tax==="true" &&  data.bill==='Tax Invoice' ){%>
                                                                        <% if (data.GSTTypes=="CGST-SGST"
                                                                            ) { %>
                                                                            <th>CGST</th>
                                                                            <th>SGST</th>
                                                                            <%} else if (data.GSTTypes == 'IGST') { %>
                                                                                <th>IGST</th>
                                                                                <% } else if (data.GSTTypes == 'VAT') { %>
                                                                                    <th>VAT</th>
                                                                                    <% } else { %>
                                                                                    <th>None</th>
                                                                                <% } %>
                                                                                    <%}%>
                <th style="text-align: right;">Total</th>
            </tr>
        </thead>
        <tbody>
            <% if(data.billItemList.length !=0 ){ data.billItemList.forEach(function (i, index) { %>
            <tr>
            
                <td style="font-size: 14px; letter-spacing: .4px; text-align: left;"> 
                    <%= i.ProductName %>
                    <% if (i.Warranty && i.Warranty != "undefined"){ %> /<%= i.Warranty %><% } %>
                    <% if (i.Remark && i.Remark != "undefined"){ %> /<%= i.Remark %><% } %> 
                    <br> <%= i.HSNCode %>
                </td>
                <td class="fontFmaliy" style="text-align: right;"><%= i.UnitPrice %></td>
                <td class="fontFmaliy" style="text-align: right;"><%= i.Quantity %></td>
                <td class="fontFmaliy" style="text-align: right;"><%= i.DiscountAmount %></td>
                <% if (data.shopdetails.SubTotal==="true" ){%>
                    <td class="fontFmaliy" style="text-align: right;"> <%= i.SubTotal %></td>
                <%}%>
                 <% if (data.shopdetails.Tax==="true" && data.bill==='Tax Invoice'  ){%>

                                                                            <% if
                                                                                (data.GSTTypes=="CGST-SGST"
                                                                                ) { %>
                                                                                <td class="fontFmaliy" style="text-align: right;">
                                                                                    <%= i.GSTAmount %> <br> @ <%= i.GSTPercentage %>
                                                                                </td>
                                                                                <td class="fontFmaliy" style="text-align: right;">
                                                                                    <%= i.GSTAmount %> <br> @ <%= i.GSTPercentage %>
                                                                                </td>
                                                                                <%} else { %>
                                                                                    <td class="fontFmaliy" style="text-align: right;">
                                                                                        <%= i.GSTAmount %> <br> @ <%= i.GSTPercentage %>
                                                                                    </td>
                                                                                    <% } %>
                                                                                        <%}%>
                <td class="fontFmaliy" style="text-align: right;"><%= i.TotalAmount %></td>
            </tr>
            <% }) } %>
        </tbody>

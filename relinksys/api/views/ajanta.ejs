</section>

    <section style="width: 100%; padding-top: 1%; position: absolute;  bottom: 0%; right: 3%; top: 160%;">
        <table style="width: 65%; float: left; text-align: left;padding-left: 5%;">
            <tr>
                <th>
                    <h4 <% %> style="padding: 0; margin:0; padding-top:10px; color: <%= data.Color %>;"> Terms and Conditions</h4>
                </th>
            </tr>
            <tr>
                <td>
                    <% if(data.welComeNoteShop.length !==0){ data.welComeNoteShop.forEach(function (i, index) { %>
                        <p <% %> style=" line-height:20px; font-size: 14px; padding: 0; margin:0; letter-spacing: 1px">
                                <%=index+1%>. <%=i.Content%>
                        </p>
                    <%})}%>
                </td>
            </tr>
            <tr>
                <th style="padding: 5px 0;">
                      <h4 <% %> style="padding: 0; margin:0;  color: <%= data.Color %>;"> <%= data.shopdetails.ShopTiming %></h4>
                </th>
            </tr>
        </table>
        <table style="width: 30%; float: right;  text-align: left; background-color: #000000 !important; color: #fff; ">
            
            <tr>
                <th>Dis. </th>
                <th >: <%= (data.billMaster.DiscountAmount + data.billMaster.AddlDiscount).toFixed(2) %>
                </th>
            </tr>
            <tr>
                <th>SubTotal </th>
                <th >: <%= data.billMaster.SubTotal.toFixed(2) %></th>
            </tr>
              <% if (data.shopdetails.Tax==="true" && data.bill==='Tax Invoice'  ){%>
            <tr>
                <th>Tax </th>
                <th >: <%= (data.billMaster.GSTAmount ).toFixed(2) %>
                </th>
            </tr>
             <% } %> 
            <tr>
                <th>GTotal </th>
                <th >:  <%= data.billMaster.TotalAmount.toFixed(2) %>
                </th>
            </tr>
            <tr >
                <th >Advance </th>
                <th >: <%= data.recivePayment.toFixed(2) %>
                </th>
            </tr>
            <tr>
                <th>Balance </th>
                <th >: <%= data.CurrentInvoiceBalance.toFixed(2) %>
                </th>
            </tr>
        </table>

<style>
     @page {
    size: 148mm 210mm; /* A5 portrait */
    margin: 0;
  }
    html body {
        zoom:78%;
        font-family: Arial, Helvetica, sans-serif;
        padding: 3%;
        position: relative;
        height: 100vh;
    }

    .fontFmaliy{
             font-family:'Courier New';
        letter-spacing: normal;
        font-weight: 400;
    }
    .powerTbl,
    .powerTbl th,
    .powerTbl td {
        border: 1px solid rgb(0, 0, 0);
        border-collapse: collapse;
        padding: 3px;
    }

    .powerTbl1,
    .powerTbl1 th,
    .powerTbl1 td {
        border: none;
        border-collapse: collapse;
        padding: 3px;
    }

     .headingName {
         position: absolute;
         margin-left: 42%;
         width: 30%;
         margin-top: 0px;
